@model P5CreateFirstAppDotNet.Models.Entities.Trim

@{
	ViewData["Title"] = "Modifier la finition";
}

<div class="container" style="max-width: 800px; margin: 40px auto;">
	<h2 class="mt-5 mb-3" style="text-align: center">Modifier la finition</h2>
	<form asp-action="Edit" method="post">
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true, "", new { @class = "text-danger", role = "alert", @aria_live = "assertive" })
		<input type="hidden" asp-for="TrimId" />
		<div class="mb-3">
			<label asp-for="Name" class="form-label">Nom de la finition</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="VehicleModelId" class="form-label">Modèle</label>
			<select asp-for="VehicleModelId" class="form-select" asp-items="ViewBag.VehicleModelList">
				<option value="">-- Choisir un modèle --</option>
			</select>
			<span asp-validation-for="VehicleModelId" class="text-danger"></span>
		</div>

		<div class="d-grid">
			<button type="submit" class="btn btn-custom btn-add-car">Enregistrer</button>
		</div>
	</form>
	<div class="mt-3">
		<a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
