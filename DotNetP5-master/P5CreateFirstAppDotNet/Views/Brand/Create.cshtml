@model P5CreateFirstAppDotNet.Models.Entities.Brand

@{
    ViewData["Title"] = "Ajouter une marque";
}
@Html.AntiForgeryToken()

<div class="container">
	<a asp-action="Index" class="btn btn-return" aria-label="Retour à la liste des marques" style="position: relative; top: 35px; text-decoration: none;">
		&larr; Retour
	</a>

    <main style="max-width: 800px; margin: 40px auto; position: relative;">
    <h2 class="mt-5 mb-3 text-center">Ajouter une marque</h2>
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nom de la marque</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" aria-live="polite"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-custom btn-add-car">Ajouter</button>
            </div>
		</form>
	</main>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
