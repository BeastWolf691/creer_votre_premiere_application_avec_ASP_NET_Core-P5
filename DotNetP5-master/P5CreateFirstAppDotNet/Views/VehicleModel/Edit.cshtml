@model P5CreateFirstAppDotNet.Models.Entities.VehicleModel
@Html.ValidationSummary(true, "", new { @class = "text-danger", role = "alert", @aria_live = "assertive" })

@{
	ViewData["Title"] = "Modifier le modèle";
}
@Html.AntiForgeryToken()

<div class="container" style="max-width: 800px; margin: 40px auto;">
	<h2 class="mt-5 mb-3" style="text-align: center">Modifier le modèle</h2>
	<form asp-action="Edit" method="post">
		<input type="hidden" asp-for="VehicleModelId" />
		<div class="mb-3">
			<label asp-for="Name" class="form-label">Nom du modèle</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="BrandId" class="form-label">Marque</label>
			<select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandList">
				<option value="">-- Choisir une marque --</option>
			</select>
			<span asp-validation-for="BrandId" class="text-danger"></span>
		</div>

		<div class="d-grid">
			<button type="submit" class="btn btn-custom btn-add-car">Enregistrer</button>
		</div>
	</form>
	<div class="mt-3">
		<a class="btn btn-secondary" asp-action="Index">Retour à la liste des modèles</a>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
