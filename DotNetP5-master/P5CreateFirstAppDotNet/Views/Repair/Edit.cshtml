@model P5CreateFirstAppDotNet.Models.ViewModels.RepairViewModel

@{
	ViewData["Title"] = "Modifier la réparation";
}


<div class="container" style="max-width: 800px; margin: 40px auto;">
	<h2 class="mt-5 mb-3" style="text-align: center">Modifier la réparation</h2>
	<form asp-action="Edit" method="post">
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true, "", new { @class = "text-danger", role = "alert", @aria_live = "assertive" })

		<input type="hidden" asp-for="RepairId" />
		<div class="mb-3">
			<label asp-for="Name" class="form-label">Nom de la réparation</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="RepairCost" class="form-label">Coût</label>
			<input asp-for="RepairCost" class="form-control" type="text"/>
			<span asp-validation-for="RepairCost" class="text-danger"></span>
		</div>
		<div class="d-grid">
			<button type="submit" class="btn btn-custom btn-add-car">Enregistrer</button>
		</div>
	</form>
	<div class="mt-3">
		<a class="btn btn-secondary" asp-action="Index">Retour à la liste des réparations</a>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
