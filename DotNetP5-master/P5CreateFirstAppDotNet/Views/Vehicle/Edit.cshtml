@model P5CreateFirstAppDotNet.Models.ViewModels.VehicleViewModel

@{
    ViewData["Title"] = "Modifier un véhicule";
}

<div class="container" style="max-width: 800px; margin: 40px auto;">
    <h2 class="mt-5 mb-3" style="text-align: center">Modifier un véhicule</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @* Anti-forgery token *@
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="VehicleId" />

        <div class="form-group mb-3">
            <label asp-for="VinCode" class="form-label"></label>
            <input asp-for="VinCode" class="form-control" />
            <span asp-validation-for="VinCode" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" type="number" min="1900" max="2100" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PurchaseDate" class="form-label"></label>
            <input asp-for="PurchaseDate" class="form-control" type="date" />
            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PurchasePrice" class="form-label"></label>
            <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="PurchasePrice" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="AvailableForSaleDate" class="form-label"></label>
            <input asp-for="AvailableForSaleDate" class="form-control" type="date" />
            <span asp-validation-for="AvailableForSaleDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SalePrice" class="form-label"></label>
            <input asp-for="SalePrice" class="form-control" type="number" step="0.01" readonly />
            <small class="form-text text-muted">Ce prix est calculé automatiquement.</small>
            <span asp-validation-for="SalePrice" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ImageFile" class="form-label">Image du véhicule (laisser vide pour ne pas changer)</label>
            <input asp-for="ImageFile" class="form-control" type="file" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="mt-2">
                    <img src="@Model.ImagePath" alt="Image actuelle" style="max-height: 150px;" />
                </div>
            }
        </div>

        @* Ici pour les listes déroulantes si tu en as, par exemple : *@
        <div class="form-group mb-3">
            <label asp-for="BrandId" class="form-label"></label>
            <select asp-for="BrandId" asp-items="ViewBag.BrandList" class="form-select"></select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="VehicleModelId" class="form-label"></label>
            <select asp-for="VehicleModelId" asp-items="ViewBag.VehicleModelList" class="form-select"></select>
            <span asp-validation-for="VehicleModelId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TrimId" class="form-label"></label>
            <select asp-for="TrimId" asp-items="ViewBag.TrimList" class="form-select"></select>
            <span asp-validation-for="TrimId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="StatusId" class="form-label"></label>
            <select asp-for="StatusId" asp-items="ViewBag.StatusList" class="form-select"></select>
            <span asp-validation-for="StatusId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Mettre à jour</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Annuler</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
