@{
    var isUserLoggedIn = User.Identity.IsAuthenticated;
	var isUserAdmin = User.IsInRole("Admin");
    var currentPage = Context.Request.Path;
    var isAccountPage = currentPage.StartsWithSegments("/Identity/Pages/Account");
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Express Voitures</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/P5CreateFirstAppDotNet.styles.css" asp-append-version="true" />
</head>
<body>
    @if (!isAccountPage)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Vehicles" asp-action="Index">Express Voitures</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Vehicles" asp-action="Index">Accueil</a>
                            </li>

                            @* Bouton "Ajouter une voiture" uniquement si connecté ET admin *@
                            @if (isUserLoggedIn && isUserAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Vehicles" asp-action="Create">Ajouter une voiture</a>
                                </li>
                            }

                            @* Bouton "Se déconnecter" uniquement si connecté *@
                            @if (isUserLoggedIn)
                            {
                                <li class="nav-item">
                                    <form method="post" asp-area="Identity" asp-page="/Account/Logout"
                                          asp-antiforgery="true" class="form-inline">
                                        <button type="submit" class="nav-link btn btn-link text-dark">Se déconnecter</button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (!isUserLoggedIn)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - Express Voitures
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
