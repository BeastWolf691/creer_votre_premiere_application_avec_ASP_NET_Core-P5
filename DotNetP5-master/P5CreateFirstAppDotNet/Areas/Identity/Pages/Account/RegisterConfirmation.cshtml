@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmation d'inscription";
}

<div class="container form-container col-md-6 col-lg-5 mt-5 p-4">
    <h1 class="p-5">Confirmation d'email</h1>
    @if (Model.DisplayConfirmAccountLink)
    {
        <div class="alert alert-warning px-4 py-4" role="alert">
            <p class="mb-4">
                ⚠️ Cette application n'a actuellement pas de véritable expéditeur d'email configuré.
            </p>
            <p class="mb-4">
                ➤ Consultez <a href="https://aka.ms/aspaccountconf" target="_blank">ce guide officiel</a> pour apprendre à configurer un service d’envoi d’emails.
            </p>
            <p class="mb-3">
                ✅ En attendant, vous pouvez confirmer votre compte manuellement :
            </p>
            <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-custom btn-add-car align-content-center">
                Confirmer mon compte
            </a>
        </div>
    }
    else
    {
        <p>
            Veuillez vérifier votre email pour confirmer votre compte.
        </p>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}