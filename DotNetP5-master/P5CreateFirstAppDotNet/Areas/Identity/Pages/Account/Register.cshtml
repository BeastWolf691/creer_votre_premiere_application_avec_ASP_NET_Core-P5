@page
@model RegisterModel
@{
    ViewData["Title"] = "S'inscrire";
}
<div class="d-flex justify-content-center align-items-start" style="min-height: 80vh;">
    <div class="container form-container col-lg-4 col-md-6 col-12 mt-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1 class="p-5">S'inscrire</h1>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
                <div class="p-3">
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Adresse email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirmer le mot de passe</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                    <div class="d-flex justify-content-evenly align-items-center p-2">
                        <button id="registerSubmit" type="submit" class="btn btn-custom btn-add-car">S'inscrire</button>
                    </div>
           </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
