@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmation email";
}

<div class="container form-container col-md-4 text-center mt-5">
    <h1 class="p-3">@ViewData["Title"]</h1>

    <partial name="_StatusMessage" model="Model.StatusMessage" />

    <div class="mt-4">
        <p>Votre adresse email a été confirmée avec succès.</p>

        <a class="btn btn-custom btn-add-car mt-3" asp-page="/Account/Login">Retour à la page de connexion</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
